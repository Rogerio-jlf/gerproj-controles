{
    "compilerOptions": {
        "target": "ES2021",
        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "outDir": "dist",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "allowJs": true,
        "isolatedModules": true,
        "incremental": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "noEmit": false,
        "types": ["node", "react", "react-dom"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["next-env.d.ts", "server.ts", "src/**/*", ".next/types/**/*.ts"],
    "exclude": ["node_modules", ".next", "dist"]
}
